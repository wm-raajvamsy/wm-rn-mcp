{
  "name": "wavemaker-rn-mcp",
  "version": "1.0.0",
  "description": "MCP Server for WaveMaker React Native",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc && cp src/tools/codebase/components/widget-catalog.json build/tools/codebase/components/",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "start": "node build/index.js",
    "start:http": "node build/http-server.js",
    "watch": "tsc --watch",
    "test": "node tests/run-all-tests.js",
    "test:base-component": "node tests/category/base-component.test.js",
    "test:widget-component": "node tests/category/widget-component.test.js",
    "test:style-theme": "node tests/category/style-theme.test.js",
    "test:transpiler-codegen": "node tests/category/transpiler-codegen.test.js",
    "test:variable-binding": "node tests/category/variable-binding.test.js",
    "test:fragment-page": "node tests/category/fragment-page.test.js",
    "test:service-di": "node tests/category/service-di.test.js",
    "test:integration": "node tests/integration/workflows.test.js",
    "test:edge-cases": "node tests/edge-cases.test.js",
    "test:performance": "node tests/performance.test.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wavemaker"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.2",
    "@types/express": "^5.0.6",
    "@types/form-data": "^2.2.1",
    "axios": "1.13.2",
    "execa": "9.6.1",
    "express": "^5.2.1",
    "form-data": "^4.0.5",
    "fs-extra": "11.3.2",
    "glob": "^13.0.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}

{
  "screen_root": {
    "type": "container",
    "name": "screen_root",
    "direction": "column",
    "gap": "16",
    "alignment": "top-center",
    "width": "fill",
    "height": "fill",
    "children": [
      {
        "type": "container",
        "name": "header_row",
        "direction": "row",
        "gap": "auto",
        "alignment": "center",
        "width": "fill",
        "height": "hug",
        "children": [
          {
            "type": "icon",
            "emoji": "游댯",
            "name": "back_icon",
            "iconclass": "fa fa-arrow-left"
          },
          {
            "type": "label",
            "emoji": "游리",
            "name": "title",
            "text": "My cart"
          },
          {
            "type": "icon",
            "emoji": "游댯",
            "name": "menu_icon",
            "iconclass": "fa fa-ellipsis-h"
          }
        ]
      },
      {
        "type": "list",
        "name": "product_list",
        "direction": "column",
        "gap": "16",
        "alignment": "top-left",
        "width": "fill",
        "height": "hug",
        "item_count": 3,
        "item_template": {
          "type": "container",
          "name": "product_item",
          "direction": "row",
          "gap": "12",
          "alignment": "middle-left",
          "width": "fill",
          "height": "hug",
          "children": [
            {
              "type": "picture",
              "emoji": "游댮",
              "name": "product_image",
              "dimensions": "80x80px"
            },
            {
              "type": "container",
              "name": "product_details",
              "direction": "column",
              "gap": "4",
              "children": [
                {
                  "type": "label",
                  "emoji": "游리",
                  "name": "product_name",
                  "text": "Product Name"
                },
                {
                  "type": "label",
                  "emoji": "游리",
                  "name": "product_description",
                  "text": "Description"
                },
                {
                  "type": "label",
                  "emoji": "游리",
                  "name": "product_price",
                  "text": "$Price"
                }
              ]
            },
            {
              "type": "icon",
              "emoji": "游댯",
              "name": "remove_icon",
              "iconclass": "fa fa-times"
            },
            {
              "type": "container",
              "name": "quantity_controls",
              "direction": "row",
              "gap": "8",
              "children": [
                {
                  "type": "button",
                  "emoji": "游댯",
                  "name": "decrease_button",
                  "label": "-"
                },
                {
                  "type": "label",
                  "emoji": "游리",
                  "name": "quantity_label",
                  "text": "1"
                },
                {
                  "type": "button",
                  "emoji": "游댯",
                  "name": "increase_button",
                  "label": "+"
                }
              ]
            }
          ]
        }
      },
      {
        "type": "container",
        "name": "promo_code_row",
        "direction": "row",
        "gap": "8",
        "alignment": "middle-left",
        "width": "fill",
        "height": "hug",
        "children": [
          {
            "type": "label",
            "emoji": "游리",
            "name": "promo_code",
            "text": "ADJ3AK"
          },
          {
            "type": "label",
            "emoji": "游리",
            "name": "promo_applied",
            "text": "Promocode applied"
          },
          {
            "type": "icon",
            "emoji": "游댯",
            "name": "check_icon",
            "iconclass": "fa fa-check-circle"
          }
        ]
      },
      {
        "type": "container",
        "name": "summary_column",
        "direction": "column",
        "gap": "4",
        "alignment": "top-left",
        "width": "fill",
        "height": "hug",
        "children": [
          {
            "type": "container",
            "name": "subtotal_row",
            "direction": "row",
            "gap": "auto",
            "alignment": "start",
            "width": "fill",
            "height": "hug",
            "children": [
              {
                "type": "label",
                "emoji": "游리",
                "name": "subtotal_label",
                "text": "Subtotal:"
              },
              {
                "type": "label",
                "emoji": "游리",
                "name": "subtotal_value",
                "text": "$800.00"
              }
            ]
          },
          {
            "type": "container",
            "name": "delivery_fee_row",
            "direction": "row",
            "gap": "auto",
            "alignment": "start",
            "width": "fill",
            "height": "hug",
            "children": [
              {
                "type": "label",
                "emoji": "游리",
                "name": "delivery_fee_label",
                "text": "Delivery Fee:"
              },
              {
                "type": "label",
                "emoji": "游리",
                "name": "delivery_fee_value",
                "text": "$5.00"
              }
            ]
          },
          {
            "type": "container",
            "name": "discount_row",
            "direction": "row",
            "gap": "auto",
            "alignment": "start",
            "width": "fill",
            "height": "hug",
            "children": [
              {
                "type": "label",
                "emoji": "游리",
                "name": "discount_label",
                "text": "Discount:"
              },
              {
                "type": "label",
                "emoji": "游리",
                "name": "discount_value",
                "text": "40%"
              }
            ]
          }
        ]
      },
      {
        "type": "button",
        "emoji": "游댯",
        "name": "checkout_button",
        "label": "Checkout for $480.00",
        "width": "fill",
        "height": "44px"
      }
    ]
  }
}
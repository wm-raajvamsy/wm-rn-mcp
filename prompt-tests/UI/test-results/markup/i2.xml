<wm-page-content>
  <wm-container name="screen_root" class="h-full w-full" direction="column" gap="0" alignment="center" width="fill" height="fill">
    
    <wm-container name="modal_overlay" class="overlay" direction="column" gap="0" alignment="center" width="fill" height="fill">
    </wm-container>
    
    <wm-container name="modal_dialog" class="card" direction="column" gap="0" alignment="top-center" width="90%" height="auto">
      
      <wm-container name="modal_header" class="" direction="row" gap="auto" alignment="center" width="fill" height="56px">
        <wm-label name="modal_title" class="heading" caption="Edit Profile" />
        <wm-icon name="close_button" iconclass="fa fa-times" />
      </wm-container>
      
      <wm-container name="modal_divider" class="divider" direction="row" gap="0" alignment="start" width="fill" height="1px">
      </wm-container>
      
      <wm-container name="form_container" class="" direction="column" gap="16" alignment="top-left" width="fill" height="hug">
        
        <wm-container name="form_section_personal" class="" direction="column" gap="12" alignment="top-left" width="fill" height="hug">
          <wm-label name="section_label_personal" class="subheading" caption="Personal Information" />
          
          <wm-container name="input_field_name" class="" direction="column" gap="4" alignment="top-left" width="fill" height="hug">
            <wm-label name="label_name" class="caption" caption="Full Name" />
            <wm-input name="input_full_name" placeholder="Enter your full name" width="fill" height="44px" />
          </wm-container>
          
          <wm-container name="input_field_email" class="" direction="column" gap="4" alignment="top-left" width="fill" height="hug">
            <wm-label name="label_email" class="caption" caption="Email Address" />
            <wm-input name="input_email" placeholder="Enter your email" type="email" width="fill" height="44px" />
          </wm-container>
        </wm-container>
        
        <wm-container name="form_section_contact" class="" direction="column" gap="12" alignment="top-left" width="fill" height="hug">
          <wm-label name="section_label_contact" class="subheading" caption="Contact Information" />
          
          <wm-container name="input_field_phone" class="" direction="column" gap="4" alignment="top-left" width="fill" height="hug">
            <wm-label name="label_phone" class="caption" caption="Phone Number" />
            <wm-input name="input_phone" placeholder="Enter your phone number" type="tel" width="fill" height="44px" />
          </wm-container>
          
          <wm-container name="input_field_address" class="" direction="column" gap="4" alignment="top-left" width="fill" height="hug">
            <wm-label name="label_address" class="caption" caption="Address" />
            <wm-input name="input_address" placeholder="Enter your address" width="fill" height="44px" />
          </wm-container>
        </wm-container>
      </wm-container>
      
      <wm-container name="modal_divider_bottom" class="divider" direction="row" gap="0" alignment="start" width="fill" height="1px">
      </wm-container>
      
      <wm-container name="modal_footer" class="" direction="row" gap="12" alignment="middle-end" width="fill" height="56px">
        <wm-button name="btn_cancel" class="btn-secondary" caption="Cancel" width="hug" height="44px" />
        <wm-button name="btn_save" class="btn-primary" caption="Save Changes" width="hug" height="44px" />
      </wm-container>
      
    </wm-container>
    
  </wm-container>
</wm-page-content>